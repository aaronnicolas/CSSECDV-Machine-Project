{{! views/register.hbs }}

<div class="register-page d-flex justify-content-center align-items-center">
  <div class="register-card glass-card p-4">
    <h2 class="text-center mb-4 text-white">登録 — Register</h2>

    {{#if error}}
      <div class="alert alert-danger text-center">
        {{error}}
      </div>
    {{/if}}

    <form action="/register" method="POST">
      <div class="mb-3">
        <label for="username" class="form-label text-white">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control bg-transparent text-white border-light"
          required
        />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label text-white">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control bg-transparent text-white border-light"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label text-white">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control bg-transparent text-white border-light"
          required
        />
        
        <!-- Password Strength Indicator -->
        <div class="mt-2">
          <div class="d-flex align-items-center">
            <small class="text-white me-2">Strength:</small>
            <div class="progress flex-grow-1" style="height: 8px;">
              <div id="password-strength-bar" class="progress-bar bg-danger" role="progressbar" style="width: 0%"></div>
            </div>
            <small id="password-strength-text" class="text-white ms-2">Weak</small>
          </div>
        </div>

        <!-- Password Requirements -->
        <div class="mt-3">
          <small class="text-white d-block mb-2">Password Requirements:</small>
          <div class="password-requirements">
            <div class="requirement" id="req-length">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">At least 8 characters long</small>
            </div>
            <div class="requirement" id="req-upper">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">Contains uppercase letter</small>
            </div>
            <div class="requirement" id="req-lower">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">Contains lowercase letter</small>
            </div>
            <div class="requirement" id="req-number">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">Contains number</small>
            </div>
            <div class="requirement" id="req-special">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">Contains special character (!@#$%^&*...)</small>
            </div>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="confirm_password" class="form-label text-white">Confirm Password</label>
        <input
          type="password"
          id="confirm_password"
          name="confirm_password"
          class="form-control bg-transparent text-white border-light"
          required
        />
        <div id="password-match-indicator" class="mt-2" style="display: none;">
          <small id="password-match-text"></small>
        </div>
      </div>

      <!-- Security Questions -->
      <div class="mb-3">
        <label class="form-label text-white">Security Question 1</label>
        <input
          type="text"
          class="form-control bg-transparent text-white border-light"
          value="What is your favorite game?"
          readonly
        />
        <input
          type="hidden"
          name="securityQuestion1"
          value="favorite_game"
        />
        <input
          type="text"
          name="securityAnswer1"
          class="form-control bg-transparent text-white border-light mt-2"
          placeholder="Enter your answer"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label text-white">Security Question 2</label>
        <input
          type="text"
          class="form-control bg-transparent text-white border-light"
          value="What is your favorite color?"
          readonly
        />
        <input
          type="hidden"
          name="securityQuestion2"
          value="favorite_color"
        />
        <input
          type="text"
          name="securityAnswer2"
          class="form-control bg-transparent text-white border-light mt-2"
          placeholder="Enter your answer"
          required
        />
      </div>

      <button type="submit" class="btn btn-light w-100 mt-3 glow-hover" id="register-btn">
        Begin Your Journey
      </button>
    </form>

    <div class="mt-4 text-center">
      <a href="/login" class="small">Already aboard? Log in</a>
    </div>
  </div>
</div>

<script src="/scripts/register.js"></script>
