<style>
  .container {
    max-width: 900px;
    margin: auto;
    padding: 2rem;
    font-family: Arial, sans-serif;
    color: white;
    background: radial-gradient(circle at top, #0b0c27, #1c1f4a);
  }
  h1 {
    text-align: center;
    margin-bottom: 2rem;
  }
  .review-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 1rem;
    border-radius: 12px;
    margin-bottom: 1rem;
    position: relative;
  }
  .review-card h3 {
    margin: 0 0 0.5rem 0;
  }
  .review-card p {
    margin: 0;
  }
  .btn {
    background: #6c63ff;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    cursor: pointer;
    margin-top: 1rem;
  }
  .btn.delete {
    background: #ff4d6d;
    position: absolute;
    top: 1rem;
    right: 1rem;
  }
  .btn.create {
    display: block;
    margin: 2rem auto;
  }
</style>
