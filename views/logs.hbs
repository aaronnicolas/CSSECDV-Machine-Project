  <h1 class="mb-4 text-light">🌟 Welcome, Star Overseer <span class="text-warning">{{adminName}}</span></h1>
  
  <nav class="mb-4">
    <ul class="nav nav-pills gap-2">
      <li class="nav-item">
        <a class="nav-link" href="/star_admin/users">👥 Manage Users</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/star_admin/observations">🔭 Manage Observations</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/star_admin/reviews">📝 Moderate Wishes</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/star_admin/settings">⚙️ Site Settings</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/star_admin/analytics">📊 View Analytics / Logs</a>
      </li>
    </ul>
  </nav>
<h1 class="mb-4 text-light">System Logs</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Event</th>
                <th scope="col">Description</th>
                <th scope="col">User</th>
                <th scope="col">Timestamp</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each logs}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.event}}</td>
                <td>{{this.desc}}</td>
                <td>
                    {{#if this.user}}
                        {{this.user.username}} <small class="text-muted">({{this.user.email}})</small>
                    {{else}}
                        <em class="text-secondary">System</em>
                    {{/if}}
                </td>
                <td>{{this.timestamp}}</td>
                <td>
                    <form action="/logs/delete/{{this._id}}" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                    <a href="/logs/edit/{{this._id}}" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

</section>