{{! views/changepassword.hbs }}

<div class="login-page d-flex justify-content-center align-items-center">
  <div class="login-card glass-card p-4">
    <h2 class="text-center mb-4 text-white">パスワード変更 — Change Password</h2>

    {{#if error}}
      <div class="alert alert-danger text-center">
        {{error}}
      </div>
    {{/if}}

    {{#if success}}
      <div class="alert alert-success text-center">
        {{success}}
      </div>
    {{/if}}

    <form action="/changepassword" method="POST">
      <div class="mb-3">
        <label for="currentPassword" class="form-label text-white">Current Password</label>
        <input
          type="password"
          id="currentPassword"
          name="currentPassword"
          class="form-control bg-transparent text-white border-light"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label text-white">New Password</label>
        <input
          type="password"
          id="password"
          name="newPassword"
          class="form-control bg-transparent text-white border-light"
          required
        />
        
        <!-- Password Strength Indicator -->
        <div class="mt-2">
          <div class="d-flex align-items-center">
            <small class="text-white me-2">Strength:</small>
            <div class="progress flex-grow-1" style="height: 8px;">
              <div id="password-strength-bar" class="progress-bar bg-danger" role="progressbar" style="width: 0%"></div>
            </div>
            <small id="password-strength-text" class="text-white ms-2">Weak</small>
          </div>
        </div>

        <!-- Password Requirements -->
        <div class="mt-3">
          <small class="text-white d-block mb-2">Password Requirements:</small>
          <div class="password-requirements">
            <div class="requirement" id="req-length">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">At least 8 characters long</small>
            </div>
            <div class="requirement" id="req-upper">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">Contains uppercase letter</small>
            </div>
            <div class="requirement" id="req-lower">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">Contains lowercase letter</small>
            </div>
            <div class="requirement" id="req-number">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">Contains number</small>
            </div>
            <div class="requirement" id="req-special">
              <span class="req-icon text-danger">✗</span>
              <small class="text-white ms-1">Contains special character (!@#$%^&*...)</small>
            </div>
          </div>
        </div>

      <div class="mb-3">
        <label for="confirm_password" class="form-label text-white">Confirm New Password</label>
        <input
          type="password"
          id="confirm_password"
          name="confirmNewPassword"
          class="form-control bg-transparent text-white border-light"
          required
        />
        <div id="password-match-indicator" class="mt-2" style="display: none;">
          <small id="password-match-text"></small>
        </div>
      </div>

      <button type="submit" class="btn btn-light w-100 mt-3 glow-hover" id="change-password-btn">
        Change Password
      </button>
    </form>
  </div>
</div>

<script src="/scripts/changepassword.js"></script>